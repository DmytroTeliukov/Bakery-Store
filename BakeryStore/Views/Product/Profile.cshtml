@model Product
@{
    ViewData["Title"] = "Product Profile";
    Layout = "_Layout";
}


    <!-- Page Content -->
<div class="container my-5 shadow p-3 mb-5 bg-white rounded">
    <div class="row">
            <div class="col-lg-4">
                <img style="height: 400px; width: 400px" src="@Model.Photo" class="img-fluid" alt="Profile Picture">
            </div>
            <div class="col-lg-8">
                <h1>@Model.Title</h1>
                <p class="lead">@Model.Description</p>
                <hr>
                <h3>Категорія</h3>
            <a style="  text-decoration: none;" class="lead text-secondary"  class="lead" asp-controller="Product" asp-action="ListByCategory" asp-route-categoryName="@Model.Category.Name">@Model.Category.Name</a>
                <h3>Ціна</h3>
            <p class="lead">@Model.Price.ToString("c")</p>
                <h3>Вага</h3>
            <p class="lead">@Model.Weight кг</p>

            </div>
        </div>
        <div class="row my-5">
            <div class="col-lg-12">
                <h3>Повний опис</h3>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <h4>Склад продукту</h4>
                        <p>@Model.Stuff</p>
                    </li>
                    <li class="list-group-item">
                        <h4>БЖВ та калорійність</h4>
                        <p>@Model.Calories</p>
                    </li>
                    <li class="list-group-item">
                        <h4>Умови зберігання</h4>
                        <p>Строк придатності: @Model.ShelfLife діб</p>
                        <p>Умови зберігання: @Model.StorageConditions</p>
                </li>
                </ul>
            </div>
        </div>
    </div>

