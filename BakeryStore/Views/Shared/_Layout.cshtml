<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BakeryStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BakeryStore.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class=" navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="d-flex justify-content-around">
                <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                     <a style="padding-left: 40px;" class="navbar-brand" asp-controller="Product" asp-action="List">Bakery Store</a>
                    <div class="collapse navbar-collapse" id="navbarNav">
                       <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                            <li class="nav-item">
                                <a class="nav-link px-2 text-white" asp-controller="Product" asp-action="About">Про нас</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link px-2 text-white" asp-controller="Product" asp-action="Contacts">Контакти</a>
                            </li>
                        
                        </ul>                    
                    
                        <div style="padding: 0px 30px 0px 500px">
                            <form class="d-flex" asp-controller="Product" asp-action="Search" method="get">
                                <input class="form-control me-2"
                                       type="search"  name="ProductName" placeholder="Я шукаю..." aria-label="Search">
                                <button class="btn btn-outline-warning"
                                        type="submit">
                                    Пошук
                                </button>
                            </form>
                        </div>

                        <div style="padding: 0px 20px 0px 0px">
                            <partial name="_LoginPartial" />
                        </div>

                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - BakeryStore. Усі права захіщені.
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


      <script>
        function initMap() {
          // Координати для відображення на карті
          var bakeryLocation = { lat: 49.9977952, lng: 36.2312338 };

          // Створення карти
          var map = new google.maps.Map(document.getElementById('map'), {
            center: bakeryLocation,
            zoom: 15
          });

          // Додавання маркера на карту
          var marker = new google.maps.Marker({
            position: bakeryLocation,
            map: map,
            title: 'Пекарня "BakeryStore"'
          });
        }
      </script>

    <!-- Виклик функції ініціалізації карти -->
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCU0ArzZlZ3n0pLq4o9MJy29LPT5DBMk4Y&callback=initMap"></script>
    <!-- Optional JavaScript -->
    <!-- Bootstrap Bundle with Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-bBbO54HR2+bzi5gH3PTq3v6ZgKj8n1cUk3lq3vGyTaBJ6zXjSMUxPe6/nFvYsZrT" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
